{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Paper",
  "type": "object",
  "properties": {
    "title": {
      "type": "string",
      "description": "The title of the paper"
    },
    "abstract": {
      "type": "string",
      "description": "The abstract/summary of the paper"
    },
    "doi": {
      "type": "string",
      "description": "Digital Object Identifier of the paper"
    }
  },
  "required": [
    "title",
    "abstract",
    "doi"
  ],
  "additionalProperties": false
}
